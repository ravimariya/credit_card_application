<%= form_for @credit_card do |f| %>
  <div class="mb-3">
    <label for="email">Email</label>
    <%= f.email_field :email, class: 'form-control', placeholder: 'Enter Email' %>
  </div>
  <div class="mb-3">
    <label for="pan_card">Pan Card</label>
    <%= f.text_field :pan_card, class: 'form-control', placeholder: 'Pan Card' %>
  </div>
     <div class="mb-3">
    <label for="aadhar_card">Aadhar Card</label>
    <%= f.text_field :aadhar_card, class: 'form-control', placeholder: 'Aadhar Card' %>
  </div>
    <div class="mb-3">
    <label for="bank_account_number">Bank A/C No</label>
    <%= f.text_field :bank_account_number, class: 'form-control', placeholder: 'Bank A/C No' %>
  </div>
    <div class="mb-3">
    <label for="bank_ifsc_code">Bank IFSC Code</label>
    <%= f.text_field :bank_ifsc_code, class: 'form-control', placeholder: 'Bank IFSC Code' %>
  </div>
    <div class="mb-3">
    <label for="money_inflow">Money Inflow</label>
    <%= f.text_field :money_inflow, class: 'form-control', placeholder: 'Money Inflow' %>
  </div>
    <div class="mb-3">
    <label for="money_outflow">Money Outflow</label>
    <%= f.text_field :money_outflow, class: 'form-control', placeholder: 'Money Outflow' %>
  </div>
  <%= f.submit 'Submit Application', class: 'btn btn-primary' %>
<% end %>